<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity">

    <TextView
        android:id="@+id/confquestiontxt"
        android:layout_width="377dp"
        android:layout_height="35dp"
        android:text="Is this the correct problem?"
        android:textAllCaps="true"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/confbtnyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/confbtnno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="437dp" />

    <TextView
        android:id="@+id/confresult"
        android:layout_width="274dp"
        android:layout_height="38dp"
        android:text="HOLDER FOR RESULT"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/backbtnconf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="678dp" />
</androidx.constraintlayout.widget.ConstraintLayout>